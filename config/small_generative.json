{
    "seed": "random",
    "training_file": "data/training.npz",
    "validation_file": "data/validation.npz",
    "epochs": 3,
    "batch_size": 1536,
    "accumulation_steps": 48,
    "context_size": 128,
    "optimizer": {
        "type": "adamw",
        "learning_rate": 0.0012,
        "warmup_steps": 200,
        "beta1": 0.9,
        "beta2": 0.95,
        "eps": 1e-12,
        "weight_decay": 0.1
    },
    "vocab": {
        "type": "sentencepiece",
        "path": "vocab/yelp-16000.model",
        "size": 16000
    },
    "model": {
        "num_layers": 12,
        "num_heads": 12,
        "d_model": 768,
        "ffn_size": 2048,
        "glu": true,
        "activation_name": "silu",
        "dtype": "bfloat16",
        "param_dtype": "float32"
    },
    "logger": {
        "use_tb": true,
        "use_csv": true,
        "use_neptune": true,
        "use_wandb": true
    }
}
